# =================================
# NestCraft Framework Configuration
# =================================

# Application
NODE_ENV=development
PORT=3000
APP_NAME=NestCraft Framework
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nestcraft
DB_PASSWORD=nestcraft
DB_DATABASE=nestcraft_db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Plugin System
PLUGINS_PATH=./src/plugins
PLUGINS_AUTO_LOAD=true
PLUGINS_WATCH_MODE=true

# Theme Engine
THEMES_PATH=./src/themes
DEFAULT_THEME=default
THEME_CACHE_ENABLED=true

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@nestcraft.com

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Cache
CACHE_TTL=300
CACHE_MAX_ITEMS=1000 