{
  "name": "nestcraft-monorepo",
  "version": "1.0.0",
  "description": "Enterprise-Grade Modular Backend Framework with Dynamic Plugin System - Monorepo",
  "author": "NestCraft Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nx build",
    "build:all": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "test": "nx test",
    "test:all": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "test:watch": "nx test --watch",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "lint": "nx lint",
    "lint:all": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "serve": "nx serve",
    "serve:backend": "nx serve backend",
    "serve:landing": "nx serve landing",
    "serve:dashboard": "nx serve dashboard",
    "start:backend": "nodemon --exec ts-node -r tsconfig-paths/register apps/backend/src/main.ts",
    "dev": "concurrently \"nx serve backend\" \"nx serve landing\" \"nx serve dashboard\"",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "dep-graph": "nx dep-graph",
    "affected:graph": "nx affected:graph",
    "clean": "nx reset && rimraf dist coverage",
    "reset": "nx reset",
    "prepare": "husky install || true",
    "docker:build": "docker-compose -f infra/docker-compose.yml build",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f",
    "docker:restart": "docker-compose -f infra/docker-compose.yml restart",
    "docker:clean": "docker-compose -f infra/docker-compose.yml down -v --remove-orphans",
    "docker:prod:build": "docker-compose -f infra/docker-compose.prod.yml build",
    "docker:prod:up": "docker-compose -f infra/docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f infra/docker-compose.prod.yml down",
    "k8s:apply": "kubectl apply -f infra/k8s/",
    "k8s:delete": "kubectl delete -f infra/k8s/",
    "k8s:logs:backend": "kubectl logs -f deployment/nestcraft-backend -n nestcraft",
    "k8s:logs:landing": "kubectl logs -f deployment/nestcraft-landing -n nestcraft",
    "k8s:logs:dashboard": "kubectl logs -f deployment/nestcraft-dashboard -n nestcraft",
    "k8s:status": "kubectl get all -n nestcraft",
    "k8s:describe": "kubectl describe all -n nestcraft",
    "db:migrate": "npm run build:shared && npx typeorm migration:run -d dist/libs/shared/src/database/data-source.js",
    "db:migrate:revert": "npm run build:shared && npx typeorm migration:revert -d dist/libs/shared/src/database/data-source.js",
    "db:migrate:show": "npm run build:shared && npx typeorm migration:show -d dist/libs/shared/src/database/data-source.js",
    "db:migrate:generate": "npm run build:shared && npx typeorm migration:generate -d dist/libs/shared/src/database/data-source.js",
    "db:schema:sync": "npm run build:shared && npx typeorm schema:sync -d dist/libs/shared/src/database/data-source.js",
    "db:schema:drop": "npm run build:shared && npx typeorm schema:drop -d dist/libs/shared/src/database/data-source.js"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.3",
    "@nx/cypress": "^21.1.3",
    "@nx/eslint": "21.1.3",
    "@nx/eslint-plugin": "^21.1.3",
    "@nx/jest": "^21.1.3",
    "@nx/js": "^21.1.3",
    "@nx/nest": "^21.1.3",
    "@nx/next": "^21.1.3",
    "@nx/node": "^21.1.3",
    "@nx/react": "^21.1.3",
    "@nx/storybook": "^21.1.3",
    "@nx/vite": "^21.1.3",
    "@swc/core": "^1.3.107",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nx": "21.1.3",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.24"
  }
}
